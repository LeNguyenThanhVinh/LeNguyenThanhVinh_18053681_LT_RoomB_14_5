<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/borderofview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDiaChi"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:paddingTop="6dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/btnSua"
        android:layout_width="42dp"
        android:layout_height="51dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:background="#6FBDA1"
        android:drawableLeft="@drawable/ic_sua"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiaChi"
        app:layout_constraintStart_toEndOf="@+id/txtDiaChi"
        app:layout_constraintTop_toTopOf="@+id/txtDiaChi"
        app:layout_constraintVertical_bias="0.368" />

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="42dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#6FBDA1 "
        android:drawableLeft="@drawable/ic_xoa"
        android:paddingLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSua"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/btnSua"
        app:layout_constraintTop_toTopOf="@+id/btnSua"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>